<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RadioGroup
                    android:id="@+id/radio_group_4"
                    android:layout_width="127dp"
                    android:layout_height="57dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@+id/textView12"
                    app:layout_constraintTop_toBottomOf="@+id/textView12">

                    <RadioButton
                        android:id="@+id/busYesID"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/busNoID"
                        android:layout_width="71dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:text="No" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radio_group_1"
                    android:layout_width="127dp"
                    android:layout_height="57dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="@+id/textView9"
                    app:layout_constraintTop_toBottomOf="@+id/textView9">

                    <RadioButton
                        android:id="@+id/scooterYesID"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/scooterNoID"
                        android:layout_width="71dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:text="No" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radio_group_2"
                    android:layout_width="127dp"
                    android:layout_height="57dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="@+id/textView8"
                    app:layout_constraintTop_toBottomOf="@+id/textView8">

                    <RadioButton
                        android:id="@+id/bikeYesID"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/bikeNoID"
                        android:layout_width="71dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:text="No" />

                </RadioGroup>

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="406dp"
                    android:layout_height="73dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_user_purple" />

                </FrameLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="40dp"
                    android:foregroundGravity="left"
                    android:text="Car driving license"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:foregroundGravity="left"
                    android:text="Know how to ride a bike"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/textView7"
                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/radio_group_3" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:foregroundGravity="left"
                    android:text="Know how to ride an electric scooter"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/textView8"
                    app:layout_constraintStart_toStartOf="@+id/textView8"
                    app:layout_constraintTop_toBottomOf="@+id/radio_group_2" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:foregroundGravity="left"
                    android:text="Maximum walking distance"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/textView9"
                    app:layout_constraintStart_toStartOf="@+id/textView9"
                    app:layout_constraintTop_toBottomOf="@+id/radio_group_1" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:foregroundGravity="left"
                    android:text="Public transport pass"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/textView11"
                    app:layout_constraintStart_toStartOf="@+id/textView11"
                    app:layout_constraintTop_toBottomOf="@+id/textView21" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:foregroundGravity="left"
                    android:text="Possess a vehicle"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView12"
                    app:layout_constraintTop_toBottomOf="@+id/expiryDayTextID" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="28dp"
                    android:text="Expiry date:"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView12"
                    app:layout_constraintTop_toBottomOf="@+id/radio_group_4" />

                <Button
                    android:id="@+id/cancelButtonID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="48dp"
                    android:inputType="textCapSentences"
                    android:text="Cancel"
                    app:cornerRadius="@dimen/button_corner_radius"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/saveButtonID" />


                <Button
                    android:id="@+id/saveButtonID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="78dp"
                    android:layout_marginTop="8dp"
                    android:inputType="textCapSentences"
                    android:text="Save"
                    app:cornerRadius="@dimen/button_corner_radius"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.532"
                    app:layout_constraintStart_toEndOf="@+id/cancelButtonID"
                    app:layout_constraintTop_toBottomOf="@+id/scooterCheckID" />

                <EditText
                    android:id="@+id/maximumDistEditTextID"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="@string/maximum_walking_distance"
                    android:inputType="textPersonName"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/textView11"
                    app:layout_constraintTop_toBottomOf="@+id/textView11" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:text="meters"
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@+id/maximumDistEditTextID"
                    app:layout_constraintTop_toTopOf="@+id/maximumDistEditTextID" />


                <EditText
                    android:id="@+id/expiryDayTextID"
                    android:layout_width="135dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="20dp"
                    android:inputType="none"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView14"
                    app:layout_constraintStart_toEndOf="@+id/textView14"
                    app:layout_constraintTop_toTopOf="@+id/textView14"
                    app:layout_constraintVertical_bias="0.631" />

                <CheckBox
                    android:id="@+id/carCheckID"
                    android:layout_width="92dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:text="Car"
                    app:layout_constraintStart_toStartOf="@+id/textView13"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" />

                <CheckBox
                    android:id="@+id/bikeCheckID"
                    android:layout_width="95dp"
                    android:layout_height="29dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:text="Bike"
                    app:layout_constraintStart_toEndOf="@+id/carCheckID"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" />

                <CheckBox
                    android:id="@+id/scooterCheckID"
                    android:layout_width="92dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:text="Scooter"
                    app:layout_constraintStart_toEndOf="@+id/bikeCheckID"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" />

                <Button
                    android:id="@+id/selectDateButtonID"
                    android:layout_width="47dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="4dp"
                    android:drawableTop="@drawable/ic_baseline_calendar_month_24"
                    android:drawableTint="@color/white"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/expiryDayTextID"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/expiryDayTextID"
                    app:layout_constraintVertical_bias="0.0" />

                <RadioGroup
                    android:id="@+id/radio_group_3"
                    android:layout_width="127dp"
                    android:layout_height="57dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/textView7">

                    <RadioButton
                        android:id="@+id/carYesID"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/carNoID"
                        android:layout_width="71dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:text="No" />

                </RadioGroup>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#6750A3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frameLayout" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>